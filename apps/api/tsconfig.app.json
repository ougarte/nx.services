{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"types": [
			"node"
		],
		"emitDecoratorMetadata": true,
		"target": "es2015"
	},
	"exclude": [
		"jest.config.ts",
		"source/**/*.spec.ts",
		"source/**/*.test.ts"
	],
	"include": [
		"source/**/*.ts"
	]
}